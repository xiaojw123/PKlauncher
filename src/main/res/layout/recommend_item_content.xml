<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/recommend_film_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/recommend_film_quality"
        android:layout_width="@dimen/home_recommend_film_quality_width"
        android:layout_height="@dimen/home_recommend_film_quality_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/home_recommend_film_quality_margin_right"
        android:layout_marginTop="@dimen/home_recommend_film_quality_margin_top"
        android:background="@drawable/home_recommend_film_bg"
        android:gravity="center"
        android:textColor="@color/recommend_film_name_color"
        android:textSize="@dimen/text_size_16_sp" />

    <TextView
        android:id="@+id/recommend_film_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_recommend_text_height"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/home_recommend_text_margin_left"
        android:gravity="center_vertical"
        android:textColor="@color/recommend_film_name_color"
        android:textSize="@dimen/text_size_18_sp"
        android:background="@drawable/home_recommend1_textview_bg"/>
    <ImageView
        android:id="@+id/recommend_focus_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_poster_unfocus"/>
</merge>