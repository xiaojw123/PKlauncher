<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_windows"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/search_result_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/z_search_result_text_1_left"
        android:layout_marginTop="@dimen/z_search_result_text_1_top"
        android:gravity="left"
        android:textColor="@color/color_bbbdbf"
        android:textSize="@dimen/text_size_18_sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/z_search_result_text_2_top"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="@dimen/z_search_result_text_2_right" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按"
            android:textColor="@color/color_bbbdbf"
            android:textSize="@dimen/text_size_18_sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/user_record_title_image"
            android:layout_height="@dimen/user_record_title_image"
            android:layout_marginLeft="@dimen/user_record_title_image_margin"
            android:layout_marginRight="@dimen/user_record_title_image_margin"
            android:src="@drawable/details_icon_menu" />

        <TextView
            android:id="@+id/search_result_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜单键编辑"
            android:textColor="@color/color_bbbdbf"
            android:textSize="@dimen/text_size_18_sp"
            android:textStyle="bold" />
    </LinearLayout>

