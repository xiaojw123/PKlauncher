    <RelativeLayout
        android:id="@+id/search_keyboard_fragment"
        android:layout_width="@dimen/search_key_layout_width"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/search_result_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/z_search_result_item_list_container_top" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/media_browser_mask_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/details_mask_alllook" />

</RelativeLayout>