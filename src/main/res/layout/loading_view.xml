<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/color_70000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/loading_img"
        android:layout_width="@dimen/loading_img_width"
        android:layout_height="@dimen/loading_img_height"
        android:layout_marginTop="@dimen/loading_img_top_margin"
        android:background="@drawable/loading_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/loading_textview_top_margin"
        android:text="@string/loading"
        android:textColor="@color/color_f1f1f1"
        android:textSize="@dimen/text_size_21_sp" />

</LinearLayout>