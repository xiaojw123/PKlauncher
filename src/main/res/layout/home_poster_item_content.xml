<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_recommend_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_recommend_poster_image_height"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/recommend_poster_layout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_recommend_poster_text1_layout_height"
            android:background="@color/recommend_poster_text1_background_color">
            <ImageView
                android:id="@+id/recommend_poster_image1"
                android:layout_width="@dimen/home_recommend_poster_text1_image_width"
                android:layout_height="@dimen/home_recommend_poster_text1_image1_height"
                android:layout_marginLeft="@dimen/home_recommend_poster_text1_image_margin_left"
                android:layout_marginTop="@dimen/home_recommend_poster_text1_image_margin_top"
                android:scaleType="centerInside"/>
            <TextView
                android:id="@+id/recommend_poster_text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/home_recommend_poster_text_margin_left"
                android:textSize="@dimen/text_size_18_sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/recommend_film_name_focus_color"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/recommend_poster_layout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_recommend_poster_text2_height"
            android:background="@color/recommend_poster_text2_background_color">
            <ImageView
                android:id="@+id/recommend_poster_image2"
                android:layout_width="@dimen/home_recommend_poster_text1_image_width"
                android:layout_height="@dimen/home_recommend_poster_text2_layout_height"
                android:layout_marginLeft="@dimen/home_recommend_poster_text1_image_margin_left"
                android:layout_marginTop="@dimen/home_recommend_poster_text1_image_margin_top"
                android:scaleType="centerInside"/>
            <TextView
                android:id="@+id/recommend_poster_text2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/home_recommend_poster_text_margin_left"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_18_sp"
                android:gravity="center"
                android:textColor="@color/recommend_film_name_focus_color"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/recommend_poster_layout3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_recommend_poster_text3_height"
            android:background="@color/recommend_poster_text3_background_color">
            <ImageView
                android:id="@+id/recommend_poster_image3"
                android:layout_width="@dimen/home_recommend_poster_text1_image_width"
                android:layout_height="@dimen/home_recommend_poster_text3_layout_height"
                android:layout_marginLeft="@dimen/home_recommend_poster_text1_image_margin_left"
                android:layout_marginTop="@dimen/home_recommend_poster_text1_image3_margin_top"
                android:scaleType="centerInside"/>
            <TextView
                android:id="@+id/recommend_poster_text3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/home_recommend_poster_text_margin_left"
                android:textSize="@dimen/text_size_18_sp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/recommend_film_name_focus_color"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/recommend_focus_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_poster_unfocus"/>

</merge>