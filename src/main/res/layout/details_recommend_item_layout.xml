<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/details_recommend_item_width"
    android:layout_height="@dimen/details_recommend_item_height"
    >
     <ImageView 
         android:id="@+id/details_recommend_poster"         
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_margin="@dimen/details_recommend_poster_margin"
         />
         <ImageView 
        android:id="@+id/details_recommend_focus_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/details_recommend_bg"
        />   
     <TextView 
         android:id="@+id/details_recommend_name"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_alignLeft="@id/details_recommend_poster"
         android:layout_alignRight="@id/details_recommend_poster"
         android:layout_alignBottom="@id/details_recommend_poster"
         android:background="@drawable/details_recommend_name_bg"
         android:gravity="left|bottom"
         android:textSize="@dimen/text_size_18_sp"
         android:textColor="@drawable/details_recommend_name_textcolor"
         android:paddingLeft="@dimen/details_recommend_name_unselected_left_padding"
         android:paddingBottom="@dimen/details_recommend_name_unselected_bottom_padding"
         />
    
</RelativeLayout>