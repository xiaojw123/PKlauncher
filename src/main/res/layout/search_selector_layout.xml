<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/z_search_selector_width"
    android:layout_height="match_parent"
    android:background="@color/color_cc151515"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="@dimen/z_search_selector_column_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/z_search_selector_zone_left"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/z_search_selector_title_text_top"
            android:gravity="center"
            android:text="@string/selector_area"
            android:textColor="@color/color_969696"
            android:textSize="@dimen/text_size_16_sp" />

        <View
            android:layout_width="@dimen/z_search_selector_title_line_width"
            android:layout_height="@dimen/z_search_selector_title_line_height"
            android:layout_marginTop="@dimen/z_search_selector_title_line_top"
            android:background="@color/color_16ffffff" />

        <ImageView
            android:layout_width="@dimen/z_search_selector_arrow_width"
            android:layout_height="@dimen/z_search_selector_arrow_height"
            android:layout_marginTop="@dimen/z_search_selector_up_top"
            android:src="@drawable/search_selector_icon_up_arrow" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/z_search_selector_column_height"
            android:layout_marginTop="@dimen/z_search_selector_column_top" >

            <ListView
                android:id="@+id/search_selector_zone_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:divider="@color/transparent_1"
                android:dividerHeight="@dimen/z_search_selector_item_spacing"
                android:listSelector="@drawable/media_browser_menu_bg"
                android:overScrollMode="never"
                android:scrollbars="none" >
            </ListView>
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/z_search_selector_arrow_width"
            android:layout_height="@dimen/z_search_selector_arrow_height"
            android:src="@drawable/search_selector_icon_down_arrow" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/z_search_selector_column_line_width"
        android:layout_height="@dimen/z_search_selector_column_line_height"
        android:layout_marginTop="@dimen/z_search_selector_column_line_top"
        android:background="@color/color_16ffffff" />

    <LinearLayout
        android:layout_width="@dimen/z_search_selector_column_width"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/z_search_selector_title_text_top"
            android:gravity="center"
            android:text="@string/selector_type"
            android:textColor="@color/color_969696"
            android:textSize="@dimen/text_size_16_sp" />

        <View
            android:layout_width="@dimen/z_search_selector_title_line_width"
            android:layout_height="@dimen/z_search_selector_title_line_height"
            android:layout_marginTop="@dimen/z_search_selector_title_line_top"
            android:background="@color/color_16ffffff" />

        <ImageView
            android:layout_width="@dimen/z_search_selector_arrow_width"
            android:layout_height="@dimen/z_search_selector_arrow_height"
            android:layout_marginTop="@dimen/z_search_selector_up_top"
            android:src="@drawable/search_selector_icon_up_arrow" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/z_search_selector_column_height"
            android:layout_marginTop="@dimen/z_search_selector_column_top" >

            <ListView
                android:id="@+id/search_selector_cat_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:divider="@color/transparent_1"
                android:dividerHeight="@dimen/z_search_selector_item_spacing"
                android:listSelector="@drawable/media_browser_menu_bg"
                android:overScrollMode="never"
                android:scrollbars="none" >
            </ListView>
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/z_search_selector_arrow_width"
            android:layout_height="@dimen/z_search_selector_arrow_height"
            android:src="@drawable/search_selector_icon_down_arrow" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/z_search_selector_column_line_width"
        android:layout_height="@dimen/z_search_selector_column_line_height"
        android:layout_marginTop="@dimen/z_search_selector_column_line_top"
        android:background="@color/color_16ffffff" />

    <LinearLayout
        android:layout_width="@dimen/z_search_selector_column_width"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/z_search_selector_title_text_top"
            android:gravity="center"
            android:text="@string/selector_years"
            android:textColor="@color/color_969696"
            android:textSize="@dimen/text_size_16_sp" />

        <View
            android:layout_width="@dimen/z_search_selector_title_line_width"
            android:layout_height="@dimen/z_search_selector_title_line_height"
            android:layout_marginTop="@dimen/z_search_selector_title_line_top"
            android:background="@color/color_16ffffff" />

        <ImageView
            android:layout_width="@dimen/z_search_selector_arrow_width"
            android:layout_height="@dimen/z_search_selector_arrow_height"
            android:layout_marginTop="@dimen/z_search_selector_up_top"
            android:src="@drawable/search_selector_icon_up_arrow" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/z_search_selector_column_height"
            android:layout_marginTop="@dimen/z_search_selector_column_top" >

            <ListView
                android:id="@+id/search_selector_year_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:divider="@color/transparent_1"
                android:dividerHeight="@dimen/z_search_selector_item_spacing"
                android:listSelector="@drawable/media_browser_menu_bg"
                android:overScrollMode="never"
                android:scrollbars="none" >
            </ListView>
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/z_search_selector_arrow_width"
            android:layout_height="@dimen/z_search_selector_arrow_height"
            android:src="@drawable/search_selector_icon_down_arrow" />
    </LinearLayout>

</LinearLayout>