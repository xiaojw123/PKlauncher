    <RelativeLayout
        android:id="@+id/media_browser_menu_list_container"
        android:layout_width="@dimen/media_browser_menu_list_width"
        android:layout_height="@dimen/media_browser_menu_list_height"
        android:layout_marginLeft="@dimen/media_browser_menu_list_left"
        android:layout_marginTop="@dimen/media_browser_menu_list_top"
        android:clipChildren="false" >

        <com.pkit.launcher.view.ListViewWrapper
            android:id="@+id/media_browser_menu_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:divider="@color/transparent_1"
            android:dividerHeight="@dimen/media_browser_menu_list_space"
            android:listSelector="@drawable/media_browser_menu_bg"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </RelativeLayout>

</RelativeLayout>